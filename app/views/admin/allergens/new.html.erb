<div id="admin_form" class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>New Allergen Form</h1>      
      </div>
      <div class="panel-body">
        <%= form_for(@allergen, url: admin_allergens_path, method:"post")  do |f| %>
          <% if @allergen.errors.any? %>
            <div id="errors">
              <h2><%= pluralize(@allergen.errors.count, "error") %> prevented this Allergen from being saved:</h2>

              <ul>
              <% @allergen.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control" %>
         </div>

          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
         </div>

          <%= f.submit class:"btn btn-primary" %>
        <% end %>      
      </div> <!-- /.panel-body -->
    </div><!-- /.panel-->
  </div><!-- /.row -->
</div><!-- /.col -->